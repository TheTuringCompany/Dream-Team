<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/dialog_event"
    android:padding="20dp"
    android:background="@drawable/dialog_background"
    android:orientation="vertical">
<ImageView
    android:id="@+id/dialog_imageview_id"
    android:layout_width="300dp"
    android:layout_height="200dp"
    android:scaleType="centerCrop"
    android:background="@drawable/sih_logo"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/black"
        android:textSize="9pt"
        android:textStyle="bold"
        android:text="Visit the link Below" />

    <TextView
        android:id="@+id/dialog_eventLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textStyle="italic"
        android:textSize="8pt"
        android:textColor="@color/red"
        android:text="www.sih.org/2019" />
 <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="2"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        >
        <Button
            android:id="@+id/dialog_findTeam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:background="@drawable/rounded_btn_bg2"
            android:text="Find a Team" />
        <Button
            android:id="@+id/dialog_joinBtn_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_btn_bg2"
            android:text="Join a Team " />
    </LinearLayout>

</LinearLayout>
