<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="30dp">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegistrationActivity"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        >

        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="75dp"
            android:id="@+id/profileImage"
            app:riv_border_color="#333333"
            android:background="@drawable/propic"
            app:riv_mutate_background="true"
            android:foregroundGravity="fill"
            app:riv_corner_radius="50dp"
            android:scaleType="fitXY"

            />

        <EditText
            android:id="@+id/enterName"
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:layout_below="@id/profileImage"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rounded_btn_bg2"
            android:padding="10dp"
            android:hint="Enter Name"
            android:inputType="text"
            android:layout_marginLeft="50dp"
            />
        <EditText
            android:id="@+id/enterContact"
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/enterName"
            android:layout_marginTop="30dp"
            android:hint="Enter Your Contact"
            android:inputType="numberDecimal"
            android:layout_marginLeft="50dp"
            android:background="@drawable/rounded_btn_bg2"
            android:padding="10dp"
            />
        <EditText
            android:id="@+id/enterGithub"
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/enterContact"
            android:layout_marginTop="30dp"
            android:hint="Enter Your Github link"
            android:layout_marginLeft="50dp"
            android:background="@drawable/rounded_btn_bg2"
            android:padding="10dp"
            />
        <EditText
            android:id="@+id/aboutme"
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/enterGithub"
            android:layout_marginTop="30dp"
            android:hint="About You"
            android:layout_marginLeft="50dp"
            android:background="@drawable/rounded_btn_bg2"
            android:padding="10dp"
            />
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/proffession"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/aboutme"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="50dp">

        </Spinner>
        <EditText
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:id="@+id/enterOrg"
            android:layout_below="@id/proffession"
            android:layout_centerHorizontal="true"
            android:inputType="text"
            android:hint="Enter Your Organisation"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/rounded_btn_bg2"
            android:padding="10dp"/>
        <TextView
            android:layout_width="290dp"
            android:id="@+id/textView"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:layout_height="50dp"
            android:layout_marginLeft="50dp"
            android:layout_below="@+id/enterOrg"
            android:text="Choose your skill set"/>



    <ScrollView
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="50dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/chipScroll">
        <android.support.design.chip.ChipGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/interests">

        </android.support.design.chip.ChipGroup>

    </ScrollView>




        <Button
            android:id="@+id/submitBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/chipScroll"
            android:layout_marginTop="30dp"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rounded_btn_bg"
            android:text="SUBMIT"
            android:textSize="18sp"
            />


    </RelativeLayout>
    </ScrollView>
</ScrollView>
